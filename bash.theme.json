{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "foreground": "#d851fa",
          "template": "\n> <#e0f8ff>{{ .UserName }}</><#d851fa> @ </><#a141b9>{{ .HostName }}: </>",
          "type": "session"
        },
        {
          "foreground": "#dadada",
          "background": "#000000",
          "style": "plain",
          "template": "<#858585>[ </><#4bebf6>{{ .Path }}</><#858585> ]</>",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#858585",
          "properties": {
            "fetch_package_manager": true,
            "npm_icon": " <#cc3a3a>\ue5fa</> ",
            "yarn_icon": " <#348cba>\uf61a</>"
          },
          "style": "plain",
          "template": "<#858585>(</>{{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }}<#858585>)</>",
          "type": "node"
        },
        {
          "foreground": "#858585",
          "properties": {
            "time_format": "04:15:04"
          },
          "style": "plain",
          "template": "<#858585>[ </>{{ .CurrentDate | date .Format }}<#858585> ]</>",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#e0f8ff",
          "background": "#000000",
          "newline":true,
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "<#858585>\n> </>[ {{ .HEAD }}{{ if .Staging.Changed }}<#00AA00> \u25cf {{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }}<#D75F00> \u25cf {{ .Working.String }}</>{{ end }}<#858585> ]</>",
          "type": "git"
        },
        {
          "foreground": "#4bebf6",
          "newline": true,
          "style": "plain",
          "template": "<#858585>\n>>(</> #<#858585>)</>",
          "type": "root"
        },
        {
          "foreground": "#858585",
          "newline": true,
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\n> ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
